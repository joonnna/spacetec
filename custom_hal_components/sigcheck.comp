component sigcheck "Check signal strength";
pin in float in;
pin out float out0;
pin out float out1;
pin out bool out2;
param r float sig_limit;
param rw bool axis;
function _;
license "GPL"; // indicates GPL v2 or later
;;
if (in0 < sig_limit)
    out2 = true;
else
    out2 = false;
if (axis)
{
    out0 = in;
    axis = false;
}
else
{
    out1 = in;
    axis = true;
}
